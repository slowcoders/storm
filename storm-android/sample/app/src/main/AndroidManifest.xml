<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.slowcoders.sample.android.sample">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="org.slowcoders.sample.android.BaseApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="org.slowcoders.sample.android.user.UserListActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="org.slowcoders.sample.android.post.comment.CommentListActivity" />
        <activity android:name="org.slowcoders.sample.android.post.PostEditorActivity" />
        <activity android:name="org.slowcoders.sample.android.post.PostListActivity">
        </activity>
    </application>

</manifest>